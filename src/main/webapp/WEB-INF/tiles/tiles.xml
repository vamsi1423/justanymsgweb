	<!-- Default Main Template -->
	<definition name="defaultTemplate" template="/WEB-INF/ftl/template.ftl">
		<put-attribute name="title" value="JAM - Just Any Message" />
		<put-attribute name="header" value="/WEB-INF/ftl/header.ftl" />
		<put-attribute name="footer" value="/WEB-INF/ftl/footer.ftl" />
	</definition>

	<definition name="homePage" extends="defaultTemplate">
		<put-attribute name="title" value="JAM - Home Page" />
		<put-attribute name="body" value="/WEB-INF/ftl/home.ftl" />
	</definition>
	
	<definition name="register" extends="defaultTemplate">
		<put-attribute name="title" value="JAM - Registration" />
		<put-attribute name="body" value="/WEB-INF/ftl/register.ftl" />
	</definition>
	<definition name="profile" extends="defaultTemplate">
		<put-attribute name="title" value="JAM - My Profile" />
		<put-attribute name="body" value="/WEB-INF/ftl/profile.ftl" />
	</definition>
